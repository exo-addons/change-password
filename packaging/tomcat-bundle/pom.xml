<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.addons.changePassword</groupId>
    <artifactId>changePassword-packaging</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <artifactId>changePassword-packaging-tomcat-bundle</artifactId>
  <packaging>pom</packaging>
  <name>Change Password - Tomcat Bundle Packaging</name>
  <description>Change Password - Tomcat Bundle Packaging</description>

  <dependencyManagement>
    <dependencies>				      
      <dependency>
		<groupId>com.exoplatform.platform.distributions</groupId>
		<artifactId>plf-enterprise-tomcat-standalone</artifactId>
		<version>${org.exoplatform.platform.version}</version>
		<type>zip</type>
	  </dependency>       
      <dependency>
        <groupId>mysql</groupId>
        <artifactId>mysql-connector-java</artifactId>
        <version>${mysql.connector.java.version}</version>
        <type>jar</type>
      </dependency>
    </dependencies>
  </dependencyManagement>


  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>changePassword-extension-war</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>provided</scope>
    </dependency>    
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>changePassword-extension-config</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>changePassword-services</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <profiles>
	<profile>
      <id>tomcat</id>
      <build>
		<finalName>changePassword-platform-${project.version}</finalName>  
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <!-- Create the distribution zip and attach it to maven -->
              <execution>
                <id>tomcat-zip</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <appendAssemblyId>false</appendAssemblyId>
                  <updateOnly>false</updateOnly>
                  <descriptors>
                    <descriptor>src/main/assemblies/changePassword-tomcat-bundle.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>            

  </profiles>

</project>
